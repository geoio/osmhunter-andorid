<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/AppActionBar</item>
        <item name="android:buttonStyle">@style/AppButton</item>
    </style>

    <style name="AppActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/geoio</item>
        <item name="android:titleTextStyle">@style/AppActionBarTitle</item>
    </style>

    <style name="AppActionBarTitle" parent="@android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppButton" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
