<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geoio.osmhunter.app.MapActivity"
    android:background="@android:color/white">

    <fragment android:name="com.geoio.osmhunter.app.Fragments.NearbyBuildingsFragment"
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_map" />

    <fragment android:name="com.geoio.osmhunter.app.Fragments.AttributeChangeFragment"
        android:id="@+id/editor"
        android:layout_width="@dimen/activity_map_editor_width"
        android:layout_height="match_parent" />

</LinearLayout>
